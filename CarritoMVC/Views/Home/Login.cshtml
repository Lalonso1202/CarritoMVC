@model CarritoMVC.Models.Usuario
@{
    ViewData["Title"] = "Login";
}
<h1 style="text-align:center; padding-top: 70px;">Iniciar sesión en la tienda</h1>

<div class="container">
    <center>
        <form asp-action="Logueo">
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" class="form-control">
       
            </div>
            <div class="form-group">
                <label asp-for="Password"> Password</label>
                <input asp-for="Password" class="form-control">
            </div>
           <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            <br />
        </form>

        
        <div class="row">
            <div class="col-lg-6">
                <a class="btn btn-outline-dark" asp-controller="Clientes" asp-action="Create">Registrarse como cliente!</a>
            </div>
            <div class="col-lg-6">
                <a class="btn btn-outline-dark" asp-controller="Empleados" asp-action="Create">Registrarse como empleado!</a>
            </div>
        </div>
        
        
    </center>
</div>
