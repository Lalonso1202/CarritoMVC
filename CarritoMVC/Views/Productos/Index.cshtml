                <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de Productos
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Productos" asp-action="Create" class="btn btn-primary">Nuevo Producto</a>

        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre Producto
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Precio vigente
                    </th>
                    <th>
                        Activo
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.Nombre</th>
                        <th width="30%">@item.Descripcion</th>
                        <th width="30%">@item.PrecioVigente</th>
                        <th width="30%">@item.Activo</th>

                        <th>

                            <a asp-action="Edit" asp-route-id="@item.Nombre">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Nombre">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Nombre">Delete</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No hay registros de Producto</p>
    }
</div>