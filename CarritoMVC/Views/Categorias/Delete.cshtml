@model CarritoMVC.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}
<style>
    .titulo-categorias {
        text-align: center;
        padding-bottom: 30px;
        padding-top: 30px;
    }
</style>
<h1 class="titulo-categorias">Eliminar categorias</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<center>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-outline-success" asp-action="Index">Volver a la lista de categorias</a>
    </form>
</div>
</center>