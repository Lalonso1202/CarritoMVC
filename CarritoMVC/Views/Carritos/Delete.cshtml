@model CarritoMVC.Models.Carrito

@{
    ViewData["Title"] = "Delete";
}

<style>
    .titulo-carritos {
        text-align: center;
        padding-bottom: 30px;
        padding-top: 30px;
    }
</style>
<h1 class="titulo-carritos">Eliminar carritos</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3
    <center>
<div>
    <h4>Carrito</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarritoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
         <a class="btn btn-outline-success" asp-action="Index">Volver a la lista de carritos</a>
    </form>
</div>
</center>