@model IEnumerable<CarritoMVC.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<style>
    .titulo-clientes {
        text-align: center;
        padding-bottom: 30px;
        padding-top: 30px;
    }

    .descripcion {
        text-align: center;
        font-size: 19px;
        font-weight: 500;
        font-family: "monospace;
    }
</style>
<h1 class="titulo-clientes">Nuestros clientes</h1>


<table class="table">
    <thead>
        <tr>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th class="descripcion">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
             <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td class="descripcion">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
             <a class="btn btn-success" asp-action="Details" asp-controller="Clientes" asp-route-id="@item.ClienteId">Detalles</a> |
             <a class="btn btn-danger" asp-action="Delete" asp-controller="Clientes" asp-route-id="@item.ClienteId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
